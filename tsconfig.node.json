{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx", // Enable JSX support for React 17+
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "vite.config.ts",
    "**/*.ts",
    "**/*.tsx", // Ensure .tsx is included for JSX files
    "**/*.js",
    "**/*.jsx" // Include JS and JSX files in the project
  ]
}
